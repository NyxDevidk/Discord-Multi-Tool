{
  "name": "DMS - Discord Management Suite",
  "short_name": "DMS",
  "description": "Ferramenta multifuncional para gerenciamento de contas do Discord com interface moderna e recursos avançados",
  "version": "2.0.0",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#0a0a0a",
  "theme_color": "#5865f2",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "pt-BR",
  "dir": "ltr",
  "categories": ["utilities", "productivity", "developer"],
  "icons": [
    {
      "src": "images/logo.svg",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    },
    {
      "src": "images/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "images/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    }
  ],
  "screenshots": [
    {
      "src": "images/screenshot-desktop.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "DMS Website - Desktop View"
    },
    {
      "src": "images/screenshot-mobile.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "DMS Website - Mobile View"
    }
  ],
  "shortcuts": [
    {
      "name": "Download DMS",
      "short_name": "Download",
      "description": "Baixar a versão mais recente do DMS",
      "url": "/#download",
      "icons": [
        {
          "src": "images/icon-download.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Documentação",
      "short_name": "Docs",
      "description": "Acessar a documentação do DMS",
      "url": "/#docs",
      "icons": [
        {
          "src": "images/icon-docs.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "GitHub",
      "short_name": "GitHub",
      "description": "Ver o código fonte no GitHub",
      "url": "https://github.com/NyxDevidk/Discord-Multi-Tool",
      "icons": [
        {
          "src": "images/icon-github.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "related_applications": [
    {
      "platform": "web",
      "url": "https://github.com/NyxDevidk/Discord-Multi-Tool"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
  "protocol_handlers": [
    {
      "protocol": "web+dms",
      "url": "/?action=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "text/plain": [".txt"],
        "application/json": [".json"]
      }
    }
  ],
  "share_target": {
    "action": "/",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "permissions": [
    "notifications"
  ],
  "author": {
    "name": "NYX DEV",
    "email": "contato@nyxdev.com",
    "url": "https://github.com/NyxDevidk"
  },
  "homepage_url": "https://github.com/NyxDevidk/Discord-Multi-Tool",
  "repository": {
    "type": "git",
    "url": "https://github.com/NyxDevidk/Discord-Multi-Tool.git"
  },
  "bugs": {
    "url": "https://github.com/NyxDevidk/Discord-Multi-Tool/issues"
  },
  "keywords": [
    "discord",
    "management",
    "tool",
    "bot",
    "token",
    "automation",
    "utility",
    "productivity"
  ]
} 